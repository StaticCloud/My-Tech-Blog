<div class="post">
    <div class="heading">
        <h1>{{title}}</h1>
    </div>
    <div class="content">
        <form class="update-post-form">
            <textarea id="content" rows="10" cols="50">{{content}}</textarea>
            <div class="post-options">
                <button type="submit" class="save-post">Save</button>
                <button type="submit" class="delete-post">Delete</button>
            </div>
        </form>
    </div>
</div>