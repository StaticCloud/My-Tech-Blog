<div class="single-post">
    {{> post-info-single post}}
</div>
<div class="comments-section">
    <div class="comments">
        <h4>Comments:</h4>
        {{#if post.comments.length}}
            {{#each post.comments as |comment|}}
            {{> comment comment}}
            {{/each}}
        {{else}}
        <p>No comments yet. Be the first to post!</p>
        {{/if}}
    </div>
    <form class="comment-form">
        {{#if loggedIn}}
        <label for="comment"><h3>Leave a comment:</h3></label>
        <textarea id="comment" rows="10" cols="50"></textarea>

        <button type="submit" class="post-comment">Comment</button>
        {{else}}
        <h4>Log in to leave a comment.</h4>
        {{/if}}
    </form>
</div>
<script src="/javascript/comment.js"></script>